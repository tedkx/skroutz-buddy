{
    "manifest_version": 3,
    "name": "Skroutz Buddy",
    "version": "1.0",
    "description": "Various skroutz.gr helpers",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "host_permissions": [
        "https://www.skroutz.gr/*"
    ]
}